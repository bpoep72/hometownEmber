
<div class="sub-title">
  Special Events
</div>

<div class="event-list">
  {{#each model as |event|}}
    {{#unless event.recurrent}}
      <div class="event-item">
        <div class="event-title">{{event.title}}</div>
        <div class="event-sub">{{event.startTime}}</div>
        <div class="event-sub">{{event.duration}} hrs</div>
        <div class="event-sub">{{event.participants}}</div>
        <div class="event-sub">{{event.format}}</div>
      </div>
    {{/unless}}
  {{/each}}
</div>

<div class="sub-title">
  Weekly Events
</div>

<div class="event-list">
  {{#each model as |event|}}
    {{#if event.recurrent}}
      <div class="event-item">
        <div class="event-title">{{event.title}}</div>
        <div class="event-sub">{{event.startTime}}</div>
        <div class="event-sub">{{event.duration}} hrs</div>
        <div class="event-sub">{{event.participants}}</div>
        <div class="event-sub">{{event.format}}</div>
      </div>
    {{/if}}
  {{/each}}
</div>



{{outlet}}
