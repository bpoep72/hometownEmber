
<div class="sub-title">
  Special Events
</div>
<hr>

<div class="event-list">
  {{#each events as |event|}}
    {{#unless event.recurrent}}
      <div class="event-container">
        <div class="event-image">
          <img  src="" onerror="this.src='assets/images/HometownComicsLogo.png';">
        </div>
        <div class="event-text">
          <div class="event-title">{{event.title}}</div>
          <div class="event-sub">On {{event.readable_date}}</div>
          <div class="event-sub">For {{event.logical_duration}}</div>
          <div class="event-sub">Participants {{event.participants}}</div>
          <div class="event-sub">{{event.format_formatted}}</div>
        </div>
      </div>
    {{/unless}}
  {{/each}}
</div>

<div class="sub-title">
  Weekly Events
</div>
<hr>
<div class="event-list">
  {{#each events as |event|}}
    {{#if event.recurrent}}
      <div class="event-container">
        <div class="event-image">
          <img  src="" onerror="this.src='assets/images/HometownComicsLogo.png';">
        </div>
        <div class="event-text">
          <div class="event-title">{{event.title}}</div>
          <div class="event-sub">On {{event.readable_date}}</div>
          <div class="event-sub">For {{event.logical_duration}}</div>
          <div class="event-sub">Participants {{event.participants}}</div>
          <div class="event-sub">{{event.format_formatted}}&nbsp;</div>
        </div>
      </div>
    {{/if}}
  {{/each}}
</div>

{{yield}}
